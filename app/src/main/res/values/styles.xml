<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.Launcher" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">@drawable/launch_screen</item>
    </style>

    <!-- Style for the Toolbar. -->
    <style name="ToolbarStyle" parent="Widget.AppCompat.Toolbar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">?attr/actionBarSize</item>
        <item name="android:background">?attr/colorPrimary</item>
        <item name="android:textColorPrimary">@android:color/white</item>
        <item name="titleTextColor">@android:color/white</item>
        <item name="titleTextAppearance">@style/ToolbarTextAppearance.Title</item>
        <item name="subtitleTextColor">@android:color/white</item>
        <item name="subtitleTextAppearance">@style/ToolbarTextAppearance.Subtitle</item>
        <item name="theme">@style/ThemeOverlay.AppCompat.Dark.ActionBar</item>
        <item name="popupTheme">@style/ThemeOverlay.AppCompat.Light</item>
    </style>

    <!-- Style for title and subtitles texts in Toolbar-->
    <style name="ToolbarTextAppearance">
        <item name="android:fontFamily">sans-serif-condensed</item>
    </style>

    <style name="ToolbarTextAppearance.Title">
        <item name="android:textSize">@dimen/toolbar_title</item>
    </style>

    <style name="ToolbarTextAppearance.Subtitle">
        <item name="android:textSize">@dimen/toolbar_subtitle</item>
    </style>

    <style name="ButtonAccent" parent="Theme.AppCompat.Light">
        <item name="colorControlHighlight">@color/colorAccent</item>
    </style>

    <!-- Style for Sync Frequency settings dialog -->
    <style name="SettingsDialog" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorControlActivated">@color/colorAccent</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

</resources>